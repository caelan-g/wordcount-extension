{
  "manifest_version": 3,
  "name": "Wordcount+",
  "description": "Your all-in-one wordcounter. Count words, measure reading time and more!",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "/images/typing_extension_thumbnail.png"
  },
  "content_scripts": [
    {
      "js": ["/scripts/service-worker.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["activeTab", "scripting"]
}
